{
  "openapi": "3.0.1",
  "info": {
    "title": "Chart Logger API",
    "description": "Logs chart analysis to a spreadsheet.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gpt-logger-server.onrender.com"
    }
  ],
  "paths": {
    "/log": {
      "post": {
        "summary": "Log chart analysis",
        "operationId": "logChartAnalysis",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChartLog"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChartLog": {
        "type": "object",
        "properties": {
          "date": { "type": "string" },
          "stockCode": { "type": "string" },
          "po": { "type": "string" },
          "rci": { "type": "string" },
          "stochastics": { "type": "string" },
          "volume": { "type": "string" },
          "comment": { "type": "string" }
        },
        "required": ["date", "stockCode", "po", "rci", "stochastics", "volume", "comment"]
      }
    }
  }
}
