{
  "openapi": "3.0.0",
  "info": {
    "title": "Chart Logger API",
    "description": "Logs chart analysis to a spreadsheet.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gpt-logger-server.onrender.com"
    }
  ],
  "paths": {
    "/log": {
      "post": {
        "summary": "Log chart analysis",
        "operationId": "logChartAnalysis",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChartLog"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChartLog": {
        "type": "object",
        "properties": {
          "date": { "type": "string" },
          "symbol": { "type": "string" },
          "clock": { "type": "string" },
          "timeframe": { "type": "string" },
          "trend_structure": { "type": "string" },
          "moving_averages": { "type": "string" },
          "rci_status": { "type": "string" },
          "stochastics_status": { "type": "string" },
          "volume_status": { "type": "string" },
          "long_strategy": { "type": "string" },
          "short_strategy": { "type": "string" },
          "fundamentals": {
            "type": "object",
            "properties": {
              "performance": { "type": "string" },
              "theme": { "type": "string" },
              "float": { "type": "string" },
              "margin": { "type": "string" },
              "holder": { "type": "string" },
              "event": { "type": "string" }
            },
            "required": [
              "performance",
              "theme",
              "float",
              "margin",
              "holder",
              "event"
            ]
          },
          "comment": { "type": "string" }
        },
        "required": [
          "date",
          "symbol",
          "clock",
          "timeframe",
          "trend_structure",
          "moving_averages",
          "rci_status",
          "stochastics_status",
          "volume_status",
          "long_strategy",
          "short_strategy",
          "fundamentals",
          "comment"
        ]
      }
    }
  }
}
